# Server
PORT=3000
NODE_ENV=development
APP_BASE_URL=http://localhost:3000

# Neon Postgres (Railway: add as variable or from Neon dashboard)
DATABASE_URL=postgresql://user:password@host:5432/agentpay?sslmode=require

# Upstash Redis (Railway: add from Upstash dashboard)
REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# Sentry (optional but recommended)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Stripe (test mode for weeks 1-3)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Resend (for approval emails)
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=AgentPay <noreply@agentpay.dev>

# JWT for approval links and magic-link login (min 32 chars)
JWT_SECRET=your-secret-at-least-32-characters-long
